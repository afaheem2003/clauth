/**
 * ────────────────────────────────────────────────────────────
 * New Waitlist Design Application System
 * ──────────────────────────────────────────────────────────────
 */
model WaitlistDesignApplication {
  id String @id @default(cuid())

  // User who submitted the application
  applicant   User   @relation(fields: [applicantId], references: [id], onDelete: Cascade)
  applicantId String

  // The clothing item they designed
  clothingItem   ClothingItem @relation(fields: [clothingItemId], references: [id], onDelete: Cascade)
  clothingItemId String

  // Referral codes they used (up to 3)
  referralCodes String[] @default([])

  // Application status
  status ApplicationStatus @default(PENDING)

  // Admin review
  reviewedAt DateTime?
  reviewedBy String? // Admin user ID
  adminNotes String? // Internal admin notes

  // Community voting
  votingRounds VotingRoundApplication[] // Voting rounds this application has been in

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("WaitlistDesignApplication")
}

model WaitlistProgress {
  id String @id @default(cuid())

  // User this progress belongs to
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique

  // Current progress state
  step            Int @default(1) // 1: Input, 2: Generate/Edit, 3: Referrals, 4: Confirmation
  generationsUsed Int @default(0)

  // Quality tracking
  qualitiesUsed   Json   @default("{\"low\": 0, \"medium\": 0, \"high\": 0}")
  selectedQuality String @default("low")

  // Form data
  formData Json @default("{}")

  // Current design and history
  currentDesign Json? // Current design object
  designHistory Json   @default("[]") // Array of design objects
  currentView   String @default("front")

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("WaitlistProgress")
}

model DesignProgress {
  id String @id @default(cuid())

  // User this progress belongs to
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique

  // Current progress state
  currentStep Int @default(1) // 1: Basic Details, 2: Design Specifics, 3: Preview & Publish

  // Design mode
  uploadMode Boolean @default(false) // true if user uploaded images, false if AI generated

  // Form data
  itemName         String?
  itemType         String?
  selectedCategory String?
  gender           String  @default("UNISEX")
  userPrompt       String?
  color            String?
  modelDescription String?
  quality          String? // Optional - null for uploaded designs

  // Generated/Uploaded design data
  aiDescription  String?
  frontImage     String?
  backImage      String?
  compositeImage String?

  // Upload-specific data (temporary storage during design process)
  uploadedFrontImage String?
  uploadedBackImage  String?

  // Final design references (set when design is completed)
  finalClothingItemId   String? // Reference to ClothingItem if AI-generated
  finalUploadedDesignId String? // Reference to UploadedDesign if uploaded

  // Challenge data
  selectedChallengeIds Json @default("[]")

  // Edit mode state (only for AI generated)
  isInpaintingMode Boolean @default(false)
  inpaintingPrompt String?
  currentView      String  @default("front")
  targetQuality    String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("DesignProgress")
}

enum ApplicationStatus {
  PENDING // Waiting for community vote
  IN_VOTING // Currently in a voting round
  APPROVED // Approved by community vote
  REJECTED // Not approved in voting round
  WAITLISTED // Remains on waitlist for future rounds
}

/**
 * ────────────────────────────────────────────────────────────
 * Community Voting System for Waitlist Applications
 * ──────────────────────────────────────────────────────────────
 */

model VotingRound {
  id          String  @id @default(cuid())
  name        String // e.g., "Week 1 Community Vote"
  description String? // Optional description

  // Timing
  startTime DateTime
  endTime   DateTime
  isActive  Boolean  @default(false)

  // Configuration
  maxApplications    Int @default(20) // Max applications to include
  approvalPercentage Int @default(30) // Top X% of applications that get approved
  minVotes           Int @default(5) // Minimum votes required for consideration

  // Results
  totalVotes           Int @default(0)
  applicationsApproved Int @default(0)

  // Admin
  createdBy   User   @relation("VotingRoundCreator", fields: [createdById], references: [id])
  createdById String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  applications         VotingRoundApplication[]
  uploadedApplications VotingRoundUploadedApplication[]
  votes                ApplicationVote[]

  @@index([isActive])
  @@index([startTime, endTime])
}

model VotingRoundApplication {
  id String @id @default(cuid())

  // Voting round this belongs to
  votingRound   VotingRound @relation(fields: [votingRoundId], references: [id], onDelete: Cascade)
  votingRoundId String

  // The application being voted on
  application   WaitlistDesignApplication @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  applicationId String

  // Vote results for this application in this round
  upvotes      Int   @default(0)
  downvotes    Int   @default(0)
  totalVotes   Int   @default(0)
  approvalRate Float @default(0.0) // upvotes / totalVotes

  // Result
  wasApproved Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  votes ApplicationVote[]

  @@unique([votingRoundId, applicationId]) // One entry per application per round
  @@index([votingRoundId, approvalRate]) // For ranking
}

model ApplicationVote {
  id String @id @default(cuid())

  // Voter (must be approved user)
  voter   User   @relation(fields: [voterId], references: [id], onDelete: Cascade)
  voterId String

  // What they're voting on
  votingRound   VotingRound @relation(fields: [votingRoundId], references: [id], onDelete: Cascade)
  votingRoundId String

  roundApplication   VotingRoundApplication @relation(fields: [roundApplicationId], references: [id], onDelete: Cascade)
  roundApplicationId String

  // Their vote
  isUpvote Boolean // true = upvote, false = downvote

  createdAt                        DateTime                        @default(now())
  VotingRoundUploadedApplication   VotingRoundUploadedApplication? @relation(fields: [votingRoundUploadedApplicationId], references: [id])
  votingRoundUploadedApplicationId String?

  @@unique([voterId, roundApplicationId]) // One vote per user per application
  @@index([votingRoundId, voterId]) // For user's voting activity
  @@index([roundApplicationId]) // For application vote counts
}
